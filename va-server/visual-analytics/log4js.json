{
  "appenders": {
    "console": {
      "type": "console",
      "layout": {
        "type": "pattern",
        "pattern": "[%d] %c %[[%p]%] %m"
      },
      "level": "debug"
    },
    "httpLog": {
      "type": "dateFile",
      "filename": "va.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "pattern",
        "pattern": "[%d] %c [%p] %m"
      },
      "category": "http"
    },
    "errorLog": {
      "type": "file",
      "filename": "error.log",
      "layout": {
        "type": "pattern",
        "pattern": "[%d] %c [%p] %m"
      },
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "clientFile": {
      "type": "file",
      "filename": "client.log",
      "layout": {
        "type": "pattern",
        "pattern": "[%d] %c [%p] %m"
      },
      "category": "weblog"
    },
    "justErrors": {
      "type": "logLevelFilter",
      "appender": "errorLog",
      "level": "error"
    }
  },
  "categories": {
    "client":{
      "appenders": ["clientFile", "console"],
      "level": "info"
    },
    "default": {
      "appenders": [
        "httpLog",
        "justErrors"
      ],
      "level": "trace"
    }
  }
}