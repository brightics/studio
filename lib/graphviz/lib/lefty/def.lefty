definit = function () {
    defview = createwidget (-1, [
        'type' = 'view';
        'name' = 'graphics view';
        'origin' = ['x' = 1; 'y' = 1;];
        'size' = ['x' = 400; 'y' = 500;];
    ]);
    defscroll = createwidget (defview, ['type' = 'scroll';]);
    defcanvas = createwidget (defscroll, [
        'type' = 'canvas';
        'origin' = ['x' = 1; 'y' = 1;];
        'size' = ['x' = 400; 'y' = 500;];
        'borderwidth' = 1;
    ]);
};
